        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10" DataContext="{Binding ChosenPokemon}">
            <TextBlock Text="ChosenPokemon" FontSize="20" />
            <TextBlock Text="Name" FontStyle="Oblique" FontSize="17" />
            <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="ID" FontStyle="Oblique" FontSize="17" />
            <TextBlock Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Image" FontStyle="Oblique" FontSize="17" />
            <Image Source="{Binding Path=ImgUrl, UpdateSourceTrigger=PropertyChanged}" 
                   HorizontalAlignment="Center" 
                   Width="300" 
                   Height="300"
                   Margin="0" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Type 1" FontStyle="Oblique" FontSize="17" />
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Type 2" FontStyle="Oblique" FontSize="17" />
                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Type1, UpdateSourceTrigger=PropertyChanged}" Margin="0, 15, 0, 0"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Type2, UpdateSourceTrigger=PropertyChanged}" Margin="0, 15, 0, 0"/>
            </Grid>
            <TextBlock Text="Height in meters" FontStyle="Oblique" FontSize="17" />
            <TextBlock Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Weight in kg" FontStyle="Oblique" FontSize="17" />
            <TextBlock Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Description" FontStyle="Oblique" FontSize="17" />
            <TextBlock Text="{Binding FlavorText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Window>
